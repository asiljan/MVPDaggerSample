<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:paddingBottom="@dimen/app_padding_small">

    <TextView
        android:id="@+id/listItemRepoName"
        style="@style/MediumTextSize"
        android:textColor="@color/grey"
        android:padding="@dimen/app_padding_xsmall"/>

    <ImageView
        android:id="@+id/listItemRepoAvatar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/listItemRepoDescr"
        style="@style/SmallTextSize"
        android:textColor="@color/blue"
        android:padding="@dimen/app_padding_xsmall"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGrey" />

</LinearLayout>