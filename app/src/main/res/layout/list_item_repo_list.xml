<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginTop="@dimen/app_padding_normal"
    android:layout_marginLeft="@dimen/app_padding_small"
    android:layout_marginRight="@dimen/app_padding_small">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/listItemCardView"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:padding="@dimen/app_padding_small"
        card_view:cardCornerRadius="5dp"
        card_view:cardBackgroundColor="@color/colorAccent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/listItemRepoAvatar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".1"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/listItemRepoName"
                style="@style/MediumTextSize"
                android:textColor="@color/white"
                android:padding="@dimen/app_padding_xsmall"
                android:text="title title"/>

            <TextView
                android:id="@+id/listItemRepoDescr"
                style="@style/SmallTextSize"
                android:textColor="@color/whiteTransparent"
                android:text="subtitle description text"
                android:padding="@dimen/app_padding_xsmall" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>